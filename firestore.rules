rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // User profile doc
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // AAA entries
      match /entries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        match /opea/{opeaId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

      // Results (legacy / other tools)
      match /results/{resultId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
